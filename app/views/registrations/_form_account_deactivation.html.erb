<%= simple_form_for('deactivate_user', :as => resource_name, :url => user_registration_path, :html => { :method => :delete }) do |f| %>
  
  <h2>Account Deactivation</h2>

  <%= f.hidden_field :id %>

  <% if f.error_notification -%>
    <div class="alert alert-error fade in">
      <strong>Wait don't go!</strong> There was a problem with your submission. Please review the errors below:
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
  <% end -%>

  <div class="row">
    <div class="span12 form-actions">
    <%= f.submit class: 'btn btn-danger', value: 'Cancel Account', data: { confirm: "Are you sure?" } %>
  </div>
</div>
<% end %>
