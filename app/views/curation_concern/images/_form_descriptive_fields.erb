<fieldset class="required">
  <legend>Required Information</legend>

    <div class="row">
      <div class="span6">

        <%= f.input :title,
          input_html: { class: 'input-xlarge' },
          label: "Title"
        %>

        <%= f.input :alternate_title,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Alternate Title"
        %>

        <%= f.input :creator,  as: :multi_value, input_html: { class: 'input-xlarge' }, label: "Creator" %>
        <%= render partial: 'linked_editors', locals: {f: f, curation_concern: curation_concern, label: 'Editor'} %>
        <%= render partial: 'linked_groups', locals: {f: f, curation_concern: curation_concern, label: "Editor Group"} %>

        <%= f.input :date_created,
          label: "Date Created",
          hint: "Format as YYYY-MM-DD"
        %>

        <%= f.input :description,
          as: :text,
          input_html: {
            class: 'input-xlarge'
          },
          label: "Description"
        %>
   
        Genre: </br></br>

        <%= f.collection_check_boxes :genre,
          [['Poster'], ['Visual Art'], ['Photograph'], ['Painting'],
          ['Map/chart'], ['Cartoon/comic']],
          :first, :first
        %>

        <%= f.input :location,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Geographic Location",
          hint: "Name of the geographic location, repository, or site"
        %>

        <%= f.input :coverage_spatial,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Geographic Subject"
        %>

        <%= f.input :coverage_temporal,
          as: :multi_value,
          input_html: { class: 'input-xlarge' },
          label: "Time Period",
          hint: "Period or date associated with the subject of your work"
        %>


        <%= f.input :measurements,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Measurements",
                    hint: "Dimensions of the work"
        %>

        <%= f.input :material,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Material",
                    hint: "Substance or materials used in the creation of the work"
        %>

        <%= f.input :requires,
                    as: :multi_value,
                    input_html: { class: 'input-xlarge' },
                    label: "Required Software",
                    hint: "Special software needed to open the work"
        %>


    </div>

    <div class="span6">

      <%= f.input :source,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Source",
                  hint: "Information source assoicated with the work and/or source of image, i.e., vendor or person"
      %>

      <%= f.input :date_photographed,
          as: :multi_value,
          label: "View Date",
          hint: "Date photograph taken. Format as YYYY-MM-DD"
      %>


      <%= f.input :publisher,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge', id: 'publisher' },
                  label: "Publisher (Required for DOI)"
      %>

      <%= f.input :subject,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Subject"
      %>

      <%= f.input :bibliographic_citation,
                  input_html: { class: 'input-xlarge' },
                  label: "Citation",
                  hint: "Preferred citation for your work"
      %>

      <%= f.input :inscription,
                  as: :text,
                  input_html: { class: 'input-xlarge' },
                  label: "Inscription",
                  inscription: "All marks, written words, stamps, signatures"
      %>

      <%= f.input :cultural_context,
                  as: :multi_value,
                  input_html: { class: 'input-xlarge' },
                  label: "Culture",
                  hint: "Name of culture, people, or adjectival form of country"
      %>

      <%= f.input :note,
                  as: :text,
                  input_html: { class: 'input-xlarge' },
                  label: "Note",
                  hint: "Additional information about your work"
      %>

    </div>
  </div>
</fieldset>
