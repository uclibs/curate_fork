<fieldset class="optional prompt">
  <legend>Additional Information</legend>

  <%= f.input :subject,                
    as: :multi_value, 
    input_html: { class: 'input-xlarge' }, 
    hint: "Terms or keywords that describe your article"
  %>

  <%= f.input :alternate_title,
    as: :multi_value,
    input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :coverage_spatial,
    as: :multi_value,
    input_html: { class: 'input-xlarge' },
    label: "Geographic Subject", 
    placeholder: "Cincinnati"
  %>

  <%= f.input :coverage_temporal,
    as: :multi_value, 
    input_html: { class: 'input-xlarge' },
    label: "Time period",
    placeholder: "18th century"
  %>

  <%= f.input :publisher,
    label: "Publisher (Required for DOI)",
    input_html: { class: 'input-xlarge', id: 'publisher' }
  %>

  <%= f.input :bibliographic_citation,
    as: :text,
    label: "Citation",
    hint: "Preferred citation for this article",
    input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :language,
    as: :multi_value,
    input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :note,
    as: :text,
    hint: "Additional information about your work",
    input_html: { class: 'input-xlarge' }
  %>

</fieldset>
